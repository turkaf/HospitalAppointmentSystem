@using EntityLayer.Concrete
@model List<Doctor>

@{
    ViewData["Title"] = "Doctors";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center">
    <h2>Doctors</h2>
    <button type="button" class="btn btn-info" onclick="window.location.href='@Url.Action("AddDoctor", "AdminDoctors")'">Add New Doctor</button>
</div>

<table class="table table-striped mt-4 mb-5">
    <thead>
        <tr>
            <th scope="col">Doctor ID</th>
            <th scope="col">Doctor Photo</th>
            <th scope="col">Doctor First Name</th>
            <th scope="col">Doctor Last Name</th>
            <th scope="col">Doctor Mail</th>
            <th scope="col">Doctor's Specialty</th>
            <th scope="col">Settings</th>
        </tr>
    </thead>
    <tbody class="table-group-divider">
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.DoctorID</td>
                <td>
                    <img class="rounded" src="@item.Photo" style="max-height: 100px;" alt="@item.FirstName">
                </td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Email</td>
                <td>@item.Clinic.Name</td>
                <td>
                    <form action="@Url.Action("DeleteDoctor", "AdminDoctors")" method="post" onsubmit="return confirm('Are you sure you want to delete this doctor?');">
                        <input type="hidden" name="DoctorID" value="@item.DoctorID" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>

            </tr>
        }
    </tbody>
</table>