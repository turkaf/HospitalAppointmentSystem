
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Dogus Hospital</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
    <div class="d-flex" id="wrapper">

        <div class="bg-dark text-white p-3" id="sidebar" style="width: 300px; min-height: 100vh;">
            <h4 class="text-center border-bottom pb-2">Patient Panel</h4>
            <ul class="list-unstyled">
                <li>
                    <a href="/PatientDashboard" class="btn btn-dark w-100 text-start py-3 mb-2">
                        <i class="bi bi-house-door"></i> Dashboard
                    </a>
                </li>
                <li>
                    <a href="/PatientMakeAppointment" class="btn btn-dark w-100 text-start py-3 mb-2">
                        <i class="bi bi-calendar-plus"></i> Make Appointment
                    </a>
                </li>
                <li>
                    <a href="/PatientAppointments" class="btn btn-dark w-100 text-start py-3 mb-2">
                        <i class="bi bi-calendar-check"></i> Appointments
                    </a>
                </li>
                <li>
                    <a href="/PatientPrescriptions" class="btn btn-dark w-100 text-start py-3 mb-2">
                        <i class="bi bi-file-earmark-medical"></i> Prescriptions
                    </a>
                </li>
                <li>
                    <a href="#" class="btn btn-dark w-100 text-start py-3 mb-2">
                        <i class="bi bi-box-arrow-right"></i> Logout
                    </a>
                </li>
            </ul>
        </div>

        <div id="page-content-wrapper" class="w-100">

            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <button class="btn btn-dark" id="menu-toggle">☰</button>
                    <span class="navbar-text ms-auto">
                        Welcome, <b>Dear Patient1</b>
                    </span>
                </div>
            </nav>

            <div class="container mt-4 mb-5">

                @RenderBody()

            </div>
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById("menu-toggle").addEventListener("click", function (e) {
            e.preventDefault();
            document.getElementById("sidebar").classList.toggle("d-none");
        });
    </script>
</body>
</html>
