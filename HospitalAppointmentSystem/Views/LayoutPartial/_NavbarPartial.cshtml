<!-- navbar - start -->
<div class="fixed-top" style="background-color: #1d2731;">
    <div class="bg-light-blue mt-2">
        <div class="container" style="max-width: 1700px;">
            <nav class="navbar navbar-expand-lg navbar-dark">
                <a class="navbar-brand" href="/">
                    <img src="~/UIFrontend/images/logo.png" class="img-fluid d-block mx-auto" style="max-height: 50px;" alt="logo">
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-flex justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item @(ViewContext.RouteData.Values["controller"].ToString() == "Home" ? "active" : "") mr-1">
