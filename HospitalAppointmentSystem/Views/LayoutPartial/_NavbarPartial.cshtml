                            <button type="button" class="btn btn-light" onclick="window.location.href='@Url.Action("SignIn", "Login")'">Log in</button>
                        </li>
                        <li class="nav-item">
                            <button type="button" class="btn btn-dark" onclick="window.location.href='@Url.Action("SignUp", "Login")'">Sign Up</button>
