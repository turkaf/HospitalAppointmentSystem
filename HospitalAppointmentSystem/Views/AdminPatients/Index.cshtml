@using System.Globalization
@model List<Patient>

@{
    ViewData["Title"] = "Patients";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center">
    <h2>Patients</h2>
</div>

<table class="table table-striped mt-4">
    <thead>
        <tr>
            <th scope="col">Patient ID</th>
            <th scope="col">Patient Identity</th>
            <th scope="col">Patient First Name</th>
            <th scope="col">Patient Last Name</th>
            <th scope="col">Patient Birthday</th>
            <th scope="col">Patient Phone</th>
            <th scope="col">Patient Mail</th>
            <th scope="col">Settings</th>
        </tr>
    </thead>
    <tbody class="table-group-divider">
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.PatientID</td>
                <td>@item.IdentityNumber</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.DateOfBirth.ToString("dd/MM/yyyy", CultureInfo.InvariantCulture)</td>
                <td>@item.Phone</td>
                <td>@item.Email</td>
                <td>
                    <form action="@Url.Action("DeletePatient", "AdminPatients")" method="post" onsubmit="return confirm('Are you sure you want to delete this doctor?');">
                        <input type="hidden" name="PatientID" value="@item.PatientID" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>