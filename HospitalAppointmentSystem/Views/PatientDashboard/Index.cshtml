
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_PatientLayout.cshtml";
}

<h2 class="mb-4">Dashboard</h2>

<div class="row">
    <div class="col-md-6">
        <div class="card shadow-lg border-0 text-white bg-gradient bg-warning h-100">
            <div class="card-header fs-5 fw-semibold">
                <i class="bi bi-calendar-check me-2"></i>Total Appointments
            </div>
            <div class="card-body d-flex flex-column justify-content-between">
                <h5 class="card-title fs-3 fw-bold">5</h5>
                <p class="card-text">The total number of appointments.</p>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card shadow-lg border-0 text-white bg-gradient bg-primary h-100">
            <div class="card-header fs-5 fw-semibold">
                <i class="bi bi-file-earmark-medical me-2"></i>Total Prescriptions
            </div>
            <div class="card-body d-flex flex-column justify-content-between">
                <h5 class="card-title fs-3 fw-bold">10</h5>
                <p class="card-text">Total number of prescriptions.</p>
            </div>
        </div>
    </div>
</div>