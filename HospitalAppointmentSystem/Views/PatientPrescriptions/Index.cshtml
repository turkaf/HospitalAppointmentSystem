@model List<PrescriptionListViewModel>

@{
    ViewData["Title"] = "Prescriptions";
    Layout = "~/Views/Shared/_PatientLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Prescriptions</h2>
</div>

<!-- Prescriptions Table -->
<table class="table table-striped mt-4 shadow-sm rounded-3">
    <thead class="table-light">
        <tr>
            <th scope="col">Prescription ID</th>
            <th scope="col">Clinic</th>
            <th scope="col">Doctor</th>
            <th scope="col">Date</th>
            <th scope="col">Settings</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr class="table-hover">
                <td>@item.ID</td>
                <td>@item.Clinic</td>
                <td>Dr. @item.Doctor</td>
                <td>@item.Date</td>
                <td>
                    <a href="@Url.Action("ViewDetails", "PatientPrescriptions", new { prescriptionId = item.ID })" class="btn btn-outline-primary me-1">View Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

